<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="20dp"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardElevation="0dp">


    <ImageButton

        android:id="@+id/categoryCardImage"
        android:layout_width="160dp"
        android:layout_height="96dp"
        android:background="@drawable/ico_background"
        android:backgroundTint="@color/pink"
        android:contentDescription="@string/categoryname"
        android:foreground="@drawable/ic_categoryrndoverlay"
        android:foregroundTint="?attr/colorOnSecondary"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/tvCategoryCardName"
        app:layout_constraintCircleRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView

        android:id="@+id/tvCategoryCardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:minWidth="128dp"
        android:text="@string/categoryname"
        android:textAppearance="@style/H2"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/categoryCardImage"
        app:layout_constraintTop_toBottomOf="@+id/categoryCardImage" />


</androidx.constraintlayout.widget.ConstraintLayout>