<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardElevation="0dp">


    <ImageButton

        android:id="@+id/categoryCardImage"
        android:layout_width="160dp"
        android:layout_height="96dp"
        android:background="@drawable/round_corner_toggle"
        android:backgroundTint="@color/pink"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tvCategoryCardName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView

        android:id="@+id/tvCategoryCardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:minWidth="128dp"
        android:text="CategoryName"
        android:textAppearance="@style/H2"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/categoryCardImage"
        app:layout_constraintTop_toBottomOf="@+id/categoryCardImage" />


</androidx.constraintlayout.widget.ConstraintLayout>